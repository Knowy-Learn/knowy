---
/**
 * Reusable button link component.
 *
 * @component
 * @param {string} - Destination URL for the link.
 * @param {"primary"|"secondary"} - Visual style variant.
 * @slot - Button content (text or elements inside the button).
 */
interface Props {
	href?: string
	variant?: "primary" | "secondary"
}

const { href = "#", variant = "primary" } = Astro.props

const base = "rounded-lg p-2 text-lg text-center shadow-md transition-all duration-200 focus:ring-2"
const variants = {
	primary: "bg-primary-600 text-accent-100 hover:scale-105 hover:bg-primary-700 focus:ring-accent-600 w-full",
	secondary:
		"bg-accent-100 text-primary-600 ring-1 ring-primary-500 hover:bg-accent-200 hover:scale-105" +
		" focus:ring-accent-600 w-full"
}
---

<a href={href} class={`${base} ${variants[variant]}`}>
	<slot />
</a>
