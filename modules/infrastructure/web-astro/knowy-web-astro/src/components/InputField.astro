---
interface Props {
	id?: string
	label?: string
	placeholder?: string
	type?: "text" | "password" | "email" | "tel" | "url" | "search" | "number" | "time" | "date"
}

const {
	id = "password",
	label = "Contraseña",
	placeholder = "Escriba su contraseña",
	type = "text"
} = Astro.props as Props
---

<div class="flex flex-col gap-1">
	{
		label && (
			<label for={id} class="text-primary-700 font-medium">
				{label}:
			</label>
		)
	}
	<input
		id={id}
		name={id}
		placeholder={placeholder}
		class="bg-background border-primary-300/80 text-secondary-500 focus:border-accent-600 w-full rounded border-2 px-3 py-2 focus:border-2 focus:ring"
		required
		type={type}
	/>
	<slot />
</div>
