<div class="rounded-md border border-gray-200 bg-white p-10 shadow-sm shadow-zinc-200">
	<ol class="relative border-s border-gray-200"></ol>
</div>

<script>
	const news = [
		{
			title: "Lanzamiento del nuevo sitio web",
			date: "2025-11-06",
			description:
				"Se publicó la nueva versión del portal con un diseño totalmente renovado y mejoras en el rendimiento."
		},
		{
			title: "Actualización del sistema interno",
			date: "2025-10-28",
			description:
				"El equipo de TI implementó la versión 2.3 del sistema de gestión, corrigiendo errores y mejorando la seguridad."
		},
		{
			title: "Evento anual de innovación",
			date: "2025-09-15",
			description:
				"Durante el evento se presentaron los proyectos más destacados del año y nuevas estrategias de desarrollo tecnológico."
		}
	]

	const list = document.querySelector("ol") as HTMLElement

	news.forEach((item) => {
		const li = document.createElement("li")
		li.className = "ms-6"
		li.innerHTML = `
      <span class="absolute -start-3 flex h-6 w-6 items-center justify-center rounded-full bg-green-100 ring-8 ring-white">
        <svg class="h-2.5 w-2.5 text-green-800" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
          <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"></path>
        </svg>
      </span>
      <h3 class="mb-1 flex items-center text-lg font-semibold text-gray-900">${item.title}</h3>
      <time class="mb-2 block text-sm leading-none font-normal text-gray-400">${item.date}</time>
      <p class="mb-4 text-base font-normal text-gray-500">${item.description}</p>
    `
		list.appendChild(li)
	})
</script>
